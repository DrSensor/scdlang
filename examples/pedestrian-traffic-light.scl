initial Red.Stop

state Red {
    do |> activateCrosswalkLight

    initial Walk
    final Stop,Off

    state Wait { do |> blinkCrosswalkLight }

    Walk -> Wait @ Crossing
    Wait -> Stop @ Crossed
    Walk,Wait -> Off @ NoCar
}

@ Timeout {
    Green -> Yellow
    Yellow -> Red
    Red -> Green @ [{Stop} | {Off}]
}

Green,Yellow,Red -> PowerOff @ Shutdown |> cleanResource